@model MemberRegisterViewModel

<form asp-action="register" method="post">
    <div class="login-form">
        <h4 class="login-title">New Customer</h4>
        <p><span class="font-weight-bold">I am a new customer</span></p>
        <div class="row">
            <div class="col-md-12 col-12 mb--15">
                <label asp-for="RegisterFullName">Full Name</label>
                <input asp-for="RegisterFullName" class="mb-0 form-control" type="text" id="name"
                       placeholder="Enter your full name">
                <span class="text-danger" asp-validation-for="RegisterFullName">  </span>
            </div>
            <div class="col-12 mb--20">
                <label asp-for="RegisterUserName">User Name</label>
                <input asp-for="RegisterUserName" class="mb-0 form-control" type="text" id="name" placeholder="Enter Your User Name Here..">
                <span class="text-danger" asp-validation-for="RegisterUserName">  </span>

            </div>
            <div class="col-lg-6 mb--20">
                <label asp-for="RegisterEmail">Email</label>
                <input asp-for="RegisterEmail" class="mb-0 form-control" type="email" id="email" placeholder="Enter your Email">
                <span class="text-danger" asp-validation-for="RegisterEmail">  </span>

            </div>
            <div class="col-lg-6 mb--20">
                <label asp-for="RegisterPassword"> Password</label>
                <input asp-for="RegisterPassword" class="mb-0 form-control" placeholder="Enter your password">
                <span class="text-danger" asp-validation-for="RegisterPassword">  </span>

            </div>
            <div class="col-lg-6 mb--20">
                <label asp-for="ConfirmPassword"> Password</label>
                <input asp-for="ConfirmPassword" class="mb-0 form-control" placeholder="Repeat your password">
                <span class="text-danger" asp-validation-for="ConfirmPassword">  </span>

            </div>
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="col-md-12">
                <button type="submit" class="btn btn-outlined">Register</button>
            </div>
        </div>
    </div>
</form>

